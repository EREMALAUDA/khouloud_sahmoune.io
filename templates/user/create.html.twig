            <div class="container form-ctnr w-75 mt-5 ">
                <form method="POST" action="{{ path('form_store') }}">
                    {{ form_row(form._token) }}
                    <div class="row">
                        <div class="col-md-6 col-12 p-5 custom_fm">
                            <h1>Contact me.</h1>
                            <div class="row pb-1">
                                <div class="col ">
                                    <div class="form-group">
                                        {{ form_label(form.name, 'Name') }}
                                        {{ form_widget(form.name, {'attr': {'class': 'form-control rounded-0'}}) }}
                                    </div></div>
                            
                            </div>
                            <div class="row pb-1">
                                <div class="col">
                                    <div class="form-group">
                                         {{ form_label(form.name, 'Surname') }}
                                        {{ form_widget(form.surname, {'attr': {'class': 'form-control rounded-0'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row pb-1">
                                <div class="col">
                                    <div class="form-group">
                                         {{ form_label(form.name, 'E-mail') }}
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control rounded-0'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row pb-1">
                                <div class="col">
                                    <div class="form-group">
                                         {{ form_label(form.name, 'Subject') }}
                                        {{ form_widget(form.subject, {'attr': {'class': 'form-control rounded-0'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row pb-1">
                                <div class="col">
                                    <div class="form-group">
                                         {{ form_label(form.name, 'Message') }}
                                         {{ form_widget(form.message, {'attr': {'class': 'form-control rounded-0'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
